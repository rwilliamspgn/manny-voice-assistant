            animation: pulse 1.5s infinite;
            background: linear-gradient(45deg, #ff4757, #ff3838);
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .status {
            font-size: 1.1em;
            margin-bottom: 20px;
